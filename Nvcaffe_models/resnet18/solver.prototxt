lr_policy: "poly"
power: 2
momentum: 0.9
weight_decay: 1e-4

snapshot: 600000
snapshot_prefix: "models/resnet18/snapshots/resnet18"
snapshot_after_train: true

solver_mode: GPU
random_seed: 1

