net: "models/resnet18/train_val.prototxt"

test_iter: 1562          # 50000/32
test_interval: 10000    
test_initialization: false

display:  100

max_iter: 600000         # 60 epoch B=128
base_lr:  0.1

# DGX1 =====================================
# max_iter: 150000        # 60 epochs B=512
# base_lr:  0.5
